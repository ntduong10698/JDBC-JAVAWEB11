<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<!--file dạng xml chứa cấu hình của project java web-->
<!--file xml đã được định nghĩa sẵn các thẻ để đấu hình-->
<!--trong có thẻ này chứa các giá trị cấu hình của mình-->
<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>TrangChu</servlet-name>
    <servlet-class>com.bksoftwarevn.itstudent.controller.TrangChu</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TrangChu</servlet-name>
<!--   giá trị url-pattern phải bắt đầu bằng ký tự /-->
    <url-pattern>/trang-chu</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>WEB-INF\img1.jpg</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
